---
import '@fontsource/poppins';
import '@fontsource/playfair-display';
import 'aos/dist/aos.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="H-Mey MDG - Mode et Style à Madagascar" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="fixed w-full bg-white/80 backdrop-blur-sm z-50 shadow-sm">
      <div class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-playfair font-bold text-gray-800">H-Mey MDG</a>
          <div class="hidden md:flex space-x-8">
            <a href="/" class="nav-link">Accueil</a>
            <a href="/collections" class="nav-link">Collections</a>
            <a href="/about" class="nav-link">À propos</a>
            <a href="/contact" class="nav-link">Contact</a>
          </div>
        </div>
      </div>
    </nav>
    
    <slot />

    <footer class="bg-gray-900 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">H-Mey MDG</h3>
            <p class="text-gray-400">Mode et Style à Madagascar</p>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Contact</h3>
            <p class="text-gray-400">Email: contact@hmey-mdg.com</p>
            <p class="text-gray-400">Tél: +261 XX XX XX XX</p>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Suivez-nous</h3>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-400 hover:text-white">Facebook</a>
              <a href="#" class="text-gray-400 hover:text-white">Instagram</a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <script>
      import AOS from 'aos';
      AOS.init({
        duration: 1000,
        once: true,
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --primary: #ff6b6b;
    --secondary: #4ecdc4;
  }
  
  html {
    font-family: 'Poppins', sans-serif;
    scroll-behavior: smooth;
  }

  .font-playfair {
    font-family: 'Playfair Display', serif;
  }

  .nav-link {
    @apply text-gray-600 hover:text-primary transition-colors;
  }

  .btn-primary {
    @apply bg-primary text-white px-6 py-2 rounded-full hover:bg-primary-90 transition-colors;
  }
</style>